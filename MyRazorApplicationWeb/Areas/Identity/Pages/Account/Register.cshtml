@page "/Register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

@*<h1>@ViewData["Title"]</h1>*@

<div class="row">
    <div class="bg-primary border rounded   p-2 mt-5 mb-5 mx-auto p-5 "style="width:400px">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h3 class="text-sm-center text-light">SIGN UP!</h3>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
          
            
            <div class="form-floating m-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="Enter First Name" aria-required="true" />
                <label asp-for="Input.FirstName"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
              <div class="form-floating m-3">
                <input asp-for="Input.LastName" class="form-control"  placeholder="Enter Last Name" aria-required="true" />
                <label asp-for="Input.LastName"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            
              
            <div class="form-floating m-3">
                <input asp-for="Input.BirthDate" type="date" class="form-control"  aria-required="true" />
                <label asp-for="Input.BirthDate"></label>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            
            
            <div class="form-floating m-3">
                <input asp-for="Input.Email" placeholder="Enter Email" class="form-control" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating m-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating m-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button  type="submit" class="w-100 btn btn-lg btn-info ">Register</button>
            
            <a class="btn btn-outline-secondary m-2 " style="text-decoration:none" asp-page="/Account/Login">I have account!</a>
        </form>
    </div>
   
    
    
    
    
    
    
    
